<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="20.0" stylesheets="@style.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="aydin.firebasedemo.SecondaryController">
    <children>
        <Label text="Enter details and press Register or Login." />
      <TextField fx:id="emailTF" promptText="Email" />
      <PasswordField fx:id="passPF" promptText="Password" />
      <Button fx:id="regB" mnemonicParsing="false" onAction="#registerUser" text="Register" />
        <Button fx:id="secondaryButton" onAction="#login" text="Login" />
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>
